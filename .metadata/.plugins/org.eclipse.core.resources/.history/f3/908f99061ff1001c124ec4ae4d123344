package kh.java.func;

public class Variable {
	public void var1() {
		//변수를 선언하는 방법 : 자료형 변수명;
		//1. 논리형 변수를 선언
		boolean bool;
		//2. 문자형 변수 선언
		char ch;
		//3. 정수형 변수 선언 (byte, short, int, long)
		int num;
		//4. 실수형 변수 선언 (float, double)
		double dNum;
		
		//변수에 데이터를 저장하는 방법 > 대입연산자(=)
		//a=b; > b라는 값을 a변수에 대입
		
		num = 10;
		System.out.println(num);
	}

}
